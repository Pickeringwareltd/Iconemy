<!DOCTYPE html>
<html lang="en">

<%- include('../partials/_header') %>

<body class="animsition">
<div class="page-wrapper">
    <!-- HEADER MOBILE-->
    <%- include('../partials/_mobile_menu') %>
    <!-- END HEADER MOBILE-->

    <!-- MENU SIDEBAR-->
    <%- include('../partials/_menu') %>
    <!-- END MENU SIDEBAR-->

    <!-- PAGE CONTAINER-->
    <div class="page-container">
        <!-- HEADER DESKTOP-->
        <header class="header-desktop">
            <div class="section__content section__content--p30">
                <div class="container-fluid">
                </div>
            </div>
        </header>
        <!-- HEADER DESKTOP-->

        <!-- MAIN CONTENT-->
        <div class="main-content">
            <div class="section__content section__content--p30">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="d-flex justify-content-between">
                                <div><h2 class="title-1 m-b-25"><%= article.title %></h2></div>
                            </div>

                            <div class="card">
                                <div class="card-body">
                                    <form action="/admin/blog/<%= article._id %>" method="post">
                                        <div class="form-group col-lg-12 col-sm-12">
                                            <div class="input-field animated">
                                                <label class="input-title">Title</label>

                                                <input name="title" value="<%= article.title %>" type="text" class="form-control required">
                                            </div>
                                        </div>

                                        <div class="form-group col-lg-12 col-sm-12">
                                            <div class="input-field animated">
                                                <label class="input-title">Meta Title</label>

                                                <input name="meta_title" value="<%= article.meta_title %>" type="text" class="form-control required">
                                            </div>
                                        </div>

                                        <div class="form-group col-lg-12 col-sm-12">
                                            <div class="input-field animated">
                                                <label class="input-title">Meta Description</label>

                                                <input name="meta_description" value="<%= article.meta_description %>" type="text" class="form-control required">
                                            </div>
                                        </div>
                                        <div class="form-group col-lg-12 col-sm-12">
                                            <div class="input-field animated">
                                                <label class="input-title">Author</label>

                                                <input name="author" value="<%= article.author %>" type="text" class="form-control required">
                                            </div>
                                        </div>
                                        <div class="form-group col-lg-12 col-sm-12 mb-4">
                                            <div class="input-field animated position-relative">
                                                <label class="input-title">Intro</label>

                                                <textarea name="intro" class="form-control"><%= article.intro %></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group col-lg-12 col-sm-12">
                                            <div class="input-field animated">
                                                <label class="input-title">Title</label>

                                                <textarea name="content" class="summernote form-control" style="min-height:300px"><%= article.content %></textarea>
                                            </div>
                                        </div>

                                        <div class="form-group col-lg-12 col-sm-12">
                                            <button type="submit" class="btn btn-primary">Save</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="copyright">
                                <p>Copyright Â© 2018 Colorlib. All rights reserved. Template by <a href="https://colorlib.com">Colorlib</a>.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<%- include('../partials/_scripts') %>

</body>

</html>
<!-- end document-->
