<!DOCTYPE html>
<html lang="zxx" class="js">
<head>
	<!-- Header -->
	<% include partials/header %>
	<% include partials/google_analytics %>

	<!-- Vendor Bundle CSS -->
	<link rel="stylesheet" href="stylesheets/vendor.bundle.css?ver=122">
	
	<!-- Custom styles for this template -->
	<link rel="stylesheet" href="/stylesheets/style.css?ver=122">
	<link rel="stylesheet" href="/stylesheets/theme.css?ver=122">
	<link rel="stylesheet" href="/stylesheets/custom_styles.css?ver=122">
	<link rel="stylesheet" href="/stylesheets/custom_sale.css?ver=122">
	<link rel="stylesheet" href="/stylesheets/create_token.css?ver=122">
	<link rel="stylesheet" href="/stylesheets/custom_payment.css?ver=122">
</head>

<body class="theme-muscari io-mascari" data-spy="scroll" data-target="#mainnav" data-offset="80">

	<!-- Header --> 
	<header class="site-header is-sticky">

		<!-- Navbars -->
		<% include partials/portal_navbar_dark %>

		<!-- Banner/Slider -->
		<div id="header" class="banner banner-tokensale d-flex align-items-center">
			<div class="header-angle-bg">
				<div class="overlay-bubble">
					<div class="overlay-bubble-1"></div>
					<div class="overlay-bubble-2"></div>
					<div class="overlay-bubble-3"></div>
					<div class="overlay-bubble-4"></div>
					<div class="overlay-bubble-5"></div>
					<div class="overlay-bubble-6"></div>
				</div>
				<div id="particles-js" class="particles-container particles-js"></div>
			</div>
			<div class="container">
				<div class="banner-content">
					<div class="row align-items-center mobile-center">
						<div class="col-lg-12 text-center res-m-bttm">
							<div class="header-txt">
								<h1 class="animated token_name" data-animate="fadeInUp" data-delay="1.25">Make a payment</h1>
								<p class="animated token_description" data-animate="fadeInUp" data-delay="1.50">To deploy your smart contract to the ethereum network</p>
							</div>
						</div><!-- .col  -->
					</div><!-- .row  -->
				</div><!-- .banner-content  -->
				<div class="row justify-content-center text-center sale-box">
					<div class="col-lg-12">
						<div class="token-box shadow">
							<div class ="row">
								<div class="col-12">
									<h1 id="price">$<%= payment.dollars %></h1>
								</div>
							</div>
							<div class ="row">
								<div class="col-6">
									<h4 id="eth"><%= payment.eth %> ETH</h4>
								</div>
								<div class="col-6">
									<h4 id="btc"><%= payment.btc %> BTC</h4>
								</div>
							</div>
							<div class ="row">
								<div class="col-12">
									<table id="shopping_cart">
									  <tr id="table_head">
									    <th>Item</th>
									    <th>Quantity</th> 
									    <th>Price</th>
									  </tr>
									  <% payment.items.forEach(function(item) { %>
									  	<tr id="table_body">
									    	<td><%= item.name %></td>
									    	<td><%= item.quantity %></td> 
									    	<td>$<%= item.price %></td>
									  	</tr>
									  <% }); %>
									  <% if(payment.discount) { %>
									  	<tr id="table_body">
									    	<td><%= payment.discount.name %></td>
									    	<td><%= payment.discount.type %></td>

									 		<% if(payment.discount.type == 'percent') { %>
									    		<td><%= payment.discount.amount %> %</td>
									    	<% } else { %>
									    		<td>$<%= payment.discount.amount %></td>
									    	<% } %>
									  	</tr>
									  <% } %>
									</table>
								</div>
							</div>
							<div class ="row" id="payment_channels">
<!-- 								<div class="col-lg-4 col-sm-12">
									<div class="input-field animated" data-animate="fadeInUp" data-delay=".8">
										<button type="submit" class="btn btn-outline" id="card_btn">Debit card</button>
									</div>
								</div> -->
								<div class="col-lg-6 col-sm-12">
									<div class="input-field animated" data-animate="fadeInUp" data-delay=".8">
									<% if(payment.items[0].id){ %>
										<button type="submit" class="btn btn-outline" id="btc_btn" data-amount="<%= payment.btc %>" data-item="<%= payment.items[0].name %>" data-id="<%= payment.items[0].id %>" data-project="<%= project %>">Bitcoin</button>
									<% } else { %>
										<button type="submit" class="btn btn-outline" id="btc_btn" data-amount="<%= payment.btc %>" data-item="<%= payment.items[0].name %>" data-project="<%= project %>">Bitcoin</button>
									<% } %>
									</div>
								</div>
								<div class="col-lg-6 col-sm-12">
									<div class="input-field animated" data-animate="fadeInUp" data-delay=".8">
									<% if(payment.items[0].id){ %>
										<button type="submit" class="btn btn-outline" id="eth_btn" data-amount="<%= payment.eth %>" data-item="<%= payment.items[0].name %>" data-id="<%= payment.items[0].id %>" data-project="<%= project %>">Ethereum</button>
									<% } else { %>
										<button type="submit" class="btn btn-outline" id="eth_btn" data-amount="<%= payment.eth %>" data-item="<%= payment.items[0].name %>" data-project="<%= project %>">Ethereum</button>
									<% } %>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div><!-- .container  -->
		</div>
	</header>
	<!-- End Header -->

	<!-- Footer -->
	<% include partials/footer %>

	<!-- Pre-loader -->
	<% include partials/preloader %>

	<!-- JavaScript (include all script here) -->
	<script src="/javascripts/jquery.bundle.js?ver=122"></script>
	<script src="/javascripts/script_sale.js?ver=122"></script>
	<script src="/javascripts/make_payment.js?ver=122"></script>

</body>
</html>
