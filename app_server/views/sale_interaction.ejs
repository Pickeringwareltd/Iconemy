<!DOCTYPE html>
<html lang="zxx" class="js">
<head>
	<% include partials/google_tag_manager %>

	<!-- This is used for the cookie policy for GDPR -->
	<script src="/javascripts/ct-ultimate-gdpr.js"></script>
	<script src="/javascripts/init.js"></script>

	<!-- Header -->
	<% include partials/header %>

	<!-- Vendor Bundle CSS -->
	<link rel="stylesheet" href="/stylesheets/vendor.bundle.css?ver=122">

	<!-- Custom styles for this template -->
	<link rel="stylesheet" href="/stylesheets/style.css?ver=122">
	<link rel="stylesheet" href="/stylesheets/theme.css?ver=122">
	<link rel="stylesheet" href="/stylesheets/custom_styles.css?ver=122">
	<link rel="stylesheet" href="/stylesheets/custom_sale.css?ver=122">

</head>

<body class="theme-muscari io-mascari" data-spy="scroll" data-target="#mainnav" data-offset="80">
	<% include partials/google_tag_manager_body %>

	<!-- Header --> 
	<header class="site-header is-sticky">

		<!-- Navbar -->
		<div class="navbar navbar-expand-lg is-transparent" id="mainnav">
			<nav class="container">
			
				<a class="navbar-brand animated" data-animate="fadeInDown" data-delay=".65" href="/">
					<img class="logo logo-dark" alt="logo" src="/images/Iconemy_logo_white_bg.png">
					<img class="logo logo-light" alt="logo" src="/images/Iconemy_logo_blue_bg@1x.png">
				</a>
				
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggle">
					<span class="navbar-toggler-icon">
						<span class="ti ti-align-justify"></span>
					</span>
				</button>

				<div class="collapse navbar-collapse justify-content-end" id="navbarToggle">
					<ul class="navbar-nav animated remove-animation" data-animate="fadeInDown" data-delay=".9">
						<li class="nav-item"><a class="nav-link menu-link" href="/">Home</a></li>
						<li class="nav-item"><a class="nav-link menu-link" href="/projects">Projects</a></li>
						<li class="nav-item"><a class="nav-link menu-link" href="https://docs.iconemy.io">Docs</a></li>
					</ul>
				</div>
				
			</nav>
		</div>
		<!-- End Navbar -->

		<!-- Banner/Slider -->
		<div id="header" class="banner banner-tokensale d-flex align-items-center">
			<div class="header-angle-bg">
				<div class="overlay-bubble">
					<div class="overlay-bubble-1"></div>
					<div class="overlay-bubble-2"></div>
					<div class="overlay-bubble-3"></div>
					<div class="overlay-bubble-4"></div>
					<div class="overlay-bubble-5"></div>
					<div class="overlay-bubble-6"></div>
				</div>
				<div id="particles-js" class="particles-container particles-js"></div>
			</div>
			<div class="container">
				<div class="banner-content">
					<div class="gaps size-3x"></div>
					<div class="row align-items-center mobile-center">
						<div class="col-lg-12 text-center res-m-bttm">
							<div class="header-txt">
								<img src="<%= data.token.logo %>" class="center_logo">
								<h1 class="animated token_name" data-animate="fadeInUp" data-delay="1.25"><%= data.crowdsale.name %></h1>
								<p class="lead animated token_symbol" data-animate="fadeInUp" data-delay="1.35"><%= data.token.symbol %></p>
								<% if(data.crowdsale.address != null){ %>
									<p class="lead animated" id="contract_address" data-animate="fadeInUp" data-delay="1.35"><%= data.crowdsale.address %> <em class="far fa-copy" id="address_copy" data-address="<%= data.crowdsale.address %>"></em></p>
								<% } %>
							</div>
						</div><!-- .col  -->
					</div><!-- .row  -->
				</div><!-- .banner-content  -->
				<div class="row justify-content-center text-center sale-box">
					<div class="col-lg-8">
						<% if (data.crowdsale.public) { %>
							<span class="warnning-badge large">Public sale</span>
						<% } else { %>
							<span class="warnning-badge large">Pre-sale</span>
						<% } %>
						<div class="gaps"></div>
						<div class="token-box shadow">

						<% if(data.crowdsale.deployed == 'Done') { %>
							<h6 class="small-text">Sale ends in:</h6>
							<div class="token-countdown d-flex align-content-stretch" data-date="<%= data.crowdsale.end %>"></div>

							<% if(!data.crowdsale.showprogress) { %>
								<h1 id="tokens-sold">...</h1>
								<p id="tokens-sold-label">Tokens sold</p>
							<% } else { %>
								<ul class="token-details">
									<li>0 <%= data.token.symbol %></li>
									<li id="center_detail">1 ETH = 50 <%= data.token.symbol %>, 1 BTC = 250 <%= data.token.symbol %></li>
									<li>50000 <%= data.token.symbol %></li>
								</ul>
								<div class="token-bar">
									<div class="token-percent" style="width:40%;">16899.49 <%= data.token.symbol %></div>
									<span class="token-point token-point-1" style="left:25%;">Soft Cap</span>
									<span class="token-point token-point-2" style="left:95%;">Hard Cap</span>
								</div>
							<% } %>

							<ul class="btns">
								<li><a href="#buy_section" id="buy_btn" class="btn btn-alt btn-lg">BUY NOW</a></li>
							</ul>
						<% } else if(data.crowdsale.deployed == 'None') { %>
							<h6 class="small-text">Sale starts in:</h6>
							<div class="token-countdown d-flex align-content-stretch" data-date="<%= data.crowdsale.start %>"></div>
							<ul class="btns">
								<li><a href="/pay?project=<%= data.project.id %>&item=crowdsale&id=<%= data.crowdsale.index %>" id="buy_btn" class="btn btn-alt btn-lg">Deploy</a></li>
							</ul>
						<% } else { %>
							<h6 class="small-text">Sale is being deployed!</h6>
							<p>Please be patient whilst your smart contracts are deployed to the network. We will email you when they are ready.</p>
						<% } %>

							
							<% if (data.social) { %>
								<ul class="social">
									<% if (data.social.facebook) { %>
										<li class="animated" data-animate="fadeInUp" data-delay=".1"><a href="<%= data.social.facebook %>"><em class="fa fa-facebook"></em></a></li>
									<% } if (data.social.twitter) { %>
										<li class="animated" data-animate="fadeInUp" data-delay=".2"><a href="<%= data.social.twitter %>"><em class="fa fa-twitter"></em></a></li>
									<% } if (data.social.youtube) { %>
										<li class="animated" data-animate="fadeInUp" data-delay=".3"><a href="<%= data.social.youtube %>"><em class="fa fa-youtube-play"></em></a></li>
									<% } if (data.social.telegram) { %>
										<li class="animated" data-animate="fadeInUp" data-delay=".4"><a href="<%= data.social.telegram %>"><em class="fa fa-telegram"></em></a></li>
									<% } if (data.social.bitcointalk) { %>
										<li class="animated" data-animate="fadeInUp" data-delay=".5"><a href="<%= data.social.bitcointalk %>"><em class="fa fa-bitcoin"></em></a></li>
									<% } if (data.social.medium) { %>
										<li class="animated" data-animate="fadeInUp" data-delay=".6"><a href="<%= data.social.medium %>"><em class="fa fa-medium"></em></a></li>
									<% } %>
								</ul>
							<% } %>
						</div>
					</div>
				</div>
			</div><!-- .container  -->
		</div>
	</header>
	<!-- End Header -->
	
	<!-- Start Section -->
	<div class="section section-bg-light section-pad no-pt into-section" id="intro">
		<div class="container">

		<% if(data.crowdsale.deployed == 'None') { %>
			<div class="row align-items-center">
				<div class="col-lg-12">
					<div class="card" id="deploy">
					  <div class="container">
					  	<div class="balance">
					  		<p class="title">Deploy</p>
					    </div> 
					    <div class="status">
					    	<p class="title">Can deploy</p>
					    	<div class="status_dot"></div>
					    </div>
					    <ul class="deploy_btn">
					    	<li><p id="deploy_explanation"><b>Please note:</b> Noone will be able to see your crowdsale until it is deployed to the main ethereum network!</p></li>
							<li><a id="deploy_btn" class="btn btn-outline" href="/pay?project=<%= data.project.id %>&item=crowdsale">Deploy</a></li>
						</ul>
					  </div>
					</div>
				</div><!-- .col  -->
			</div><!-- .row  -->
		<% } else if(data.crowdsale.deployed == 'Done') { %>
			<div class="row align-items-center">
				<div class="col-lg-4 col-sm-12">
					<div class="card animated" data-animate="fadeInUp" data-delay=".2">
					  <div class="container token-price">
					  	<p class="title">Token price</p>
					    <h4 class="eth"><span><b id="token_price"><%= data.crowdsale.initialPrice %></b></span> ETH</h4>  
					  </div>
					</div>
				</div><!-- .col  -->
				<div class="col-lg-4 col-sm-12">
					<div class="card animated" data-animate="fadeInUp" data-delay=".4">
					  <div class="container">
					  	<p class="title">Total supply</p> 
					    <h4><b id="supply_num">0</b></h4> 
					  </div>
					</div>
				</div><!-- .col  -->
				<div class="col-lg-4 col-sm-12" id="token_link" data-link="/projects/<%= data.project.id %>/token">
					<div class="card animated" data-animate="fadeInUp" data-delay=".4">
					  <div class="container">
					  	<p class="title">Token for sale</p> 
					    <h4><b><%= data.token.symbol %></b></h4> 
					  </div>
					</div>
				</div><!-- .col  -->
			</div><!-- .row  -->
			<div class="gaps size-3x"></div>
			<div class="row align-items-center">
				<div class="col-lg-12">
					<div class="card_large" id="buy_section">
					  <div class="container">
					  	<div class="balance">
					  		<p class="title">Balance</p>
					    	<h4 class="token_balance"><b id="balance_num">0</b> <%= data.token.symbol %></h4>
					    </div> 
					    <div class="status">
					    	<p class="title">Can buy</p>
					    	<div class="status_dot"></div>
					    </div>
					    <div class="input_fields">
					    	<label for="tokens">Tokens</label>
							<input type="number" id="tokens" name="tokens" placeholder="1250">

							<label for="eth">ETH</label>
							<input type="number" id="eth" name="eth" placeholder="0.0014">
					    </div>
					    <ul class="transfer_btn">
					    	<img src="/images/loading_gif.gif" alt="loading" id="loading_gif">
					    	<img src="/images/tick_img.png" alt="loading" id="complete_img">
							<li><a class="btn btn-outline" data-toggle="modal" id="question_popup_btn">Buy now</a></li>
						</ul>
					  </div>
					</div>
				</div><!-- .col  -->
			</div><!-- .row  -->
			<div class="row align-items-center admin_only" style="display: none;">
				<div class="col-lg-12">
					<div class="card" id="withdraw_section">
					  <div class="container">
					  	<div class="balance">
					  		<p class="title">Withdraw</p>
					    </div> 
					    <div class="status">
					    	<p class="title">Can withdraw</p>
					    	<div class="status_dot"></div>
					    </div>
					    <ul class="withdraw_btn">
					    	<img src="/images/loading_gif.gif" alt="loading" id="withdraw_loading_gif">
					    	<img src="/images/tick_img.png" alt="loading" id="withdraw_complete_img">
							<li><a id="withdraw_btn" class="btn btn-outline">Withdraw</a></li>
						</ul>
					  </div>
					</div>
				</div><!-- .col  -->
			</div><!-- .row  -->
			<div class="row align-items-center admin_only" style="display: none;">
				<div class="col-lg-12">
					<div class="card" id="stop_section">
					  <div class="container">
					  	<div class="balance">
					  		<p class="title">Stop sale</p>
					    </div> 
					    <div class="status">
					    	<p class="title">Can stop</p>
					    	<div class="status_dot"></div>
					    </div>
					    <ul class="withdraw_btn">
					    	<img src="/images/loading_gif.gif" alt="loading" id="stop_loading_gif">
					    	<img src="/images/tick_img.png" alt="loading" id="stop_complete_img">
							<li><a id="stop_btn" class="btn btn-outline">Stop sale</a></li>
						</ul>
					  </div>
					</div>
				</div><!-- .col  -->
			</div><!-- .row  -->
		
		<% } %>

			<div class="gaps size-6x"></div>
			<div class="gaps size-6x"></div>

			<div class="gaps size-3x d-none d-lg-block"></div>
		</div><!-- .conatiner  -->
	</div>
	<!-- End Section -->

	<!-- Ask if we can take email pop-up -->
	<div class="modal fade" id="question_popup" tabindex="-1" role="dialog" aria-labelledby="question_popup_title" aria-hidden="true">
	  <div class="modal-dialog modal-dialog-centered" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <h3 class="modal-title" id="question_popup_title">Can we e-mail you?</h3>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div class="modal-body">
	        <p><b>We need your email to keep you updated with the project!</b></p>
	       	<p id="small_message">Your email will be accessible by Iconemy and the MetaFusion team. For more information visit the privacy policy <a href="/privacy">here</a></p>
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-primary" data-dismiss="modal" data-toggle="modal" data-target="#introducer_popup" id="email_reject_button">No thanks</button>
	        <button type="button" class="btn btn-primary" data-dismiss="modal" data-toggle="modal" data-target="#email_popup">Of course!</button>
	      </div>
	    </div>
	  </div>
	</div>

	<div class="modal fade" id="email_popup" tabindex="-1" role="dialog" aria-labelledby="email_popup_title" aria-hidden="true">
	  <div class="modal-dialog modal-dialog-centered" role="document">
	    <div class="modal-content">
	      <div class="modal-body">
	      	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	        <p><b>Enter your email here. </b></p>
	        <p class="text-danger" style="display: none;" id="popup_error_message"></p>
	        <form id="email-form" class="form-message text-left">
				<div class="form-row justify-content-center">
					<div class="form-group col-lg-12 col-sm-12">
						<div class="input-field animated">
							<input name="email" type="text" id="email_input" class="input-line required" placeholder="myname@email.co.uk">
						</div>
					</div>
				</div>
			</form>
			<img id="loader_gif" src="/images/ripple_loader.gif" style="display: none;">
			<img id="complete_img_blue" src="/images/complete_image_blue.png" style="display: none;">
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-primary" data-dismiss="modal" data-toggle="modal" data-target="#introducer_popup" id="email_cancel_button">Cancel</button>
	        <button type="button" class="btn btn-primary" data-dismiss="modal" data-toggle="modal" data-target="#introducer_popup" id="email_submit_button">Submit</button>
	      </div>
	    </div>
	  </div>
	</div>

	<div class="modal fade" id="introducer_popup" tabindex="-1" role="dialog" aria-labelledby="introducer_popup_title" aria-hidden="true">
	  <div class="modal-dialog modal-dialog-centered" role="document">
	    <div class="modal-content">
	      <div class="modal-body">
	      	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	        <p><b>Have you been sent here? </b></p>
	       	<p id="small_message">Enter your introducer code now.</a></p>
	        <p class="text-danger" style="display: none;" id="popup_error_message"></p>
	        <form id="email-form" class="form-message text-left">
				<div class="form-row justify-content-center">
					<div class="form-group col-lg-12 col-sm-12">
						<div class="input-field animated">
							<input name="introducer" type="text" id="introducer_input" class="input-line required" placeholder="introducer123">
						</div>
					</div>
				</div>
			</form>
			<img id="loader_gif" src="/images/ripple_loader.gif" style="display: none;">
			<img id="complete_img_blue" src="/images/complete_image_blue.png" style="display: none;">
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-primary" data-dismiss="modal" id="introducer_cancel_button">No I haven't</button>
	        <button type="button" class="btn btn-primary" data-dismiss="modal" id="introducer_submit_button">Submit</button>
	      </div>
	    </div>
	  </div>
	</div>

	<!-- Footer -->
	<% include partials/footer %>

	<!-- Pre-loader -->
	<% include partials/preloader %>

	<!-- JavaScript (include all script here) -->
	<script src="/javascripts/jquery.bundle.js?ver=122"></script>
	<script src="/javascripts/script_sale.js?ver=122"></script>
	<script src="/javascripts/custom_sale_script.js?ver=122"></script>

	<!-- Request the specific ABI files for this token -->
	<script src="<%= data.crowdsale.jsFileURL %>"></script>
</body>
</html>
