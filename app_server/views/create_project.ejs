<!DOCTYPE html>
<html lang="zxx" class="js">
<head>
	<!-- Header -->
	<% include partials/header %>

	<!-- Vendor Bundle CSS -->
	<link rel="stylesheet" href="/stylesheets/vendor.bundle.css?ver=122">

	<!-- For the calendar -->
	<link rel="stylesheet" type="text/css" href="/stylesheets/daterangepicker.css" />
	<link rel="stylesheet" type="text/css" href="/stylesheets/jquery.timepicker.css" />

	<!-- For the slider -->
	<link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap-slider.css" />

	<!-- Custom styles for this template -->
	<link rel="stylesheet" href="/stylesheets/style.css?ver=122">
	<link rel="stylesheet" href="/stylesheets/theme.css?ver=122">
	<link rel="stylesheet" href="/stylesheets/custom_styles.css?ver=122">
	<link rel="stylesheet" href="/stylesheets/custom_sale.css?ver=122">
	<link rel="stylesheet" href="/stylesheets/custom_sale_form.css?ver=122">
	<link rel="stylesheet" href="/stylesheets/create_project.css?ver=122">

	<!-- For uploadcare CDN -->
	<script>
	  UPLOADCARE_PUBLIC_KEY = '02b13a5445396427d34c';
	</script>

</head>

<body class="theme-muscari io-mascari" data-spy="scroll" data-target="#mainnav" data-offset="80">

	<!-- Header --> 
	<header class="site-header is-sticky">

		<!-- Navbars -->
		<% include partials/portal_navbar_light %>

		<!-- Banner/Slider -->
		<div id="header" class="banner banner-tokensale d-flex align-items-center">
			<div class="header-angle-bg">
				<div class="overlay-bubble">
					<div class="overlay-bubble-1"></div>
					<div class="overlay-bubble-2"></div>
					<div class="overlay-bubble-3"></div>
					<div class="overlay-bubble-4"></div>
					<div class="overlay-bubble-5"></div>
					<div class="overlay-bubble-6"></div>
				</div>
				<div id="particles-js" class="particles-container particles-js"></div>
			</div>
			<div class="container">
				<div class="banner-content">
					<div class="gaps size-3x"></div>
					<div class="row align-items-center mobile-center">
						<div class="col-lg-12 text-center res-m-bttm">
							<div class="header-txt">
								<h1 class="animated token_name" data-animate="fadeInUp" data-delay="1.25">Create a project</h1>
								<p class="animated token_description" data-animate="fadeInUp" data-delay="1.50">Enter the details of your new cryptocurrency project</p>
							</div>
						</div><!-- .col  -->
					</div><!-- .row  -->
				</div><!-- .banner-content  -->
				<div class="row justify-content-center text-center sale-box">
					<div class="col-lg-12">
						<div class="token-box shadow">
							<form id="token-form" class="form-message text-left" action="" method="post" role="form">
								<div class="form-row justify-content-center">
									<div class="form-group col-lg-12 col-sm-12">
										<div class="input-field animated">
											<input name="sale_name" type="text" id="sale_name" class="input-line required" placeholder="My new project">
											<label class="input-title">Project name *</label>
										</div>
									</div>
								</div>

								<div class="form-row justify-content-center">
									<div class="form-group col-lg-6 col-sm-12">
										<label class="input-title" id="logo_label">Project logo *</label>

										<div id="upload_section">
											<input type="hidden" role="uploadcare-uploader" name="logo" 
											data-public-key="02b13a5445396427d34c"
											data-images-only="true"
											data-preview-step="true" 
											data-crop="300:200" />
										</div>

										<img id="uploaded_logo" />
									</div>
									<div class="form-group col-lg-6 col-sm-12">
											<label id="description_label">Description *</label>
											
											<textarea name="description" rows="6" cols="50" id="description">Enter a basic description about your project here</textarea>
										
									</div>
								</div>

								<div class="form-row" id="duration_row">
									<div class="form-group col-lg-6 col-sm-12" id="social_left">
										
											<div class="social_row">
												<div class="social_column_image">
													<img src="/images/facebook_empty.png" id="facebook_favicon_empty">
													<img src="/images/facebook_full.png" id="facebook_favicon_full">
												</div>
												<div class="social_column_input">
													<div class="input-field animated input-focused">
														<input name="facebook" type="text" id="facebook_input" class="input-line required" placeholder="www.facebook.com/myproject">
													</div>
												</div>
											</div>

											<div class="social_row">
												<div class="social_column_image">
													<img src="/images/twitter_empty.png" id="twitter_favicon_empty">
													<img src="/images/twitter_full.png" id="twitter_favicon_full">
												</div>
												<div class="social_column_input">
													<div class="input-field animated input-focused">
														<input name="twitter" type="text" id="twitter_input" class="input-line required" placeholder="www.twitter.com/myproject">
													</div>
												</div>
											</div>
											<div class="social_row">
												<div class="social_column_image">
													<img src="/images/youtube_empty.png" id="youtube_favicon_empty">
													<img src="/images/youtube_full.png" id="youtube_favicon_full">
												</div>
												<div class="social_column_input">
													<div class="input-field animated input-focused">
														<input name="youtube" type="text" id="youtube_input" class="input-line required" placeholder="www.youtube.com/myproject">
													</div>
												</div>
											</div>
										
									</div>
									<div class="form-group col-lg-6 col-sm-12" id="social_right">
										<div class="input-field animated input-focused">
											<div class="social_row">
												<div class="social_column_image">
													<img src="/images/bitcoin_favicon_empty.png" id="bitcoin_favicon_empty">
													<img src="/images/bitcoin_favicon_full.png" id="bitcoin_favicon_full">
												</div>
												<div class="social_column_input">
													<div class="input-field animated input-focused">
														<input name="bitcoin" type="text" id="bitcoin_input" class="input-line required" placeholder="www.bitcointalk.org/myproject">
													</div>
												</div>
											</div>
											<div class="social_row">
												<div class="social_column_image">
													<img src="/images/medium_favicon_empty.png" id="medium_favicon_empty">
													<img src="/images/medium_favicon_full.png" id="medium_favicon_full">
												</div>
												<div class="social_column_input">
													<div class="input-field animated input-focused">
														<input name="medium" type="text" id="medium_input" class="input-line required" placeholder="www.medium.com/@myproject">
													</div>
												</div>
											</div>
											<div class="social_row">
												<div class="social_column_image">
													<img src="/images/telegram_favicon_empty.png" id="telegram_favicon_empty">
													<img src="/images/telegram_favicon_full.png" id="telegram_favicon_full">
												</div>
												<div class="social_column_input">
													<div class="input-field animated input-focused">
														<input name="telegram" type="text" id="telegram_input" class="input-line required" placeholder="https://t.me/myproject">
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>

								<div class="form-row" id="price_row">
									<div class="form-group col-12">
										<div class="input-field animated">
											<input name="website" type="text" id="website" class="input-line required" placeholder="www.myproject.io">
											<label class="input-title" id="website_label">Official website *</label>
										</div>
									</div>
								</div>

								<div class="form-row">
									<div class="form-group col-lg-6 col-sm-12">
										<div class="document_row">
											<div class="document_column_image">
												<img src="/images/whitepaper_empty.png" id="whitepaper_favicon_empty">
												<img src="/images/whitepaper_full.png" id="whitepaper_favicon_full">
											</div>
											<div class="document_column_input">
												<div class="input-field animated input-focused">
													<label id="description_label">Whitepaper</label>

													<input name="whitepaper" type="text" id="whitepaper" class="input-line required" placeholder="www.myproject.io/whitepaper">
												</div>
											</div>
										</div>
									</div>
									<div class="form-group col-lg-6 col-sm-12">
										<div class="document_row">
											<div class="document_column_image">
												<img src="/images/onepager_empty.png" id="onepager_favicon_empty">
												<img src="/images/onepager_full.png" id="onepager_favicon_full">
											</div>
											<div class="document_column_input">
												<div class="input-field animated input-focused">
													<label id="description_label">One pager</label>

													<input name="onepager" type="text" id="onepager" class="input-line required" placeholder="www.myproject.io/onepager">
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="form-row">
									<div class="form-group col-lg-8 col-sm-12">
										<div class="subdomain_row">
											<div class="subdomain_column_https">
												<p id="subdomain_https">https://</p>	
											</div>
											<div class="subdomain_column_input">	
													<div class="input-field animated">
														<input name="subdomain" type="text" id="subdomain" class="input-line required" placeholder="myproject.iconemy.io">
														<label class="input-title">Iconemy subdomain *</label>
													</div>
											</div>
										</div>
									</div>
									<div class="form-group col-lg-4 col-sm-12">
										<p id="subdomain_message">This is the domain that you can share with investors to view your project and take part in your crowdsales.</p>
									</div>
								</div>

								<div class="form-row submit">
									<div class="form-group col-12">
										<input type="text" class="d-none" name="form-anti-honeypot" value="">
										<div class="input-field animated">
											<button type="submit" class="btn btn-outline" id="submit_btn">Create now</button>
										</div>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div><!-- .container  -->
		</div>
	</header>
	<!-- End Header -->

	<!-- Footer -->
	<% include partials/footer %>

	<!-- Pre-loader -->
	<% include partials/preloader %>

	<!-- Jquery -->
	<script src="/javascripts/jquery.bundle.js?ver=122"></script>

	<!-- For image processing via uploadcare -->
	<script src="https://ucarecdn.com/libs/widget/3.5.1/uploadcare.min.js" charset="utf-8"></script>

	<!-- For read only suffix on subdomain -->
	<script src="/javascripts/readOnlySuffix.js"></script>

	<!-- JavaScript (include all script here) -->
	<script src="/javascripts/script_sale.js?ver=122"></script>
	<script src="/javascripts/custom_new_sale.js?ver=122"></script>
	<script src="/javascripts/create_project.js?ver=122"></script>

	<!-- For calendar -->
	<script src="/javascripts/moment.min.js"></script>
	<script src="/javascripts/daterangepicker.js"></script>

	<!--  For time selector -->
	<script src="/javascripts/jquery.timepicker.js"></script>

	<!-- For the slider -->
	<script src="/javascripts/bootstrap-slider.js"></script>

	<!-- Error message -->
	<% include partials/error_message %>

	<!-- Validate project -->
	<script src="/javascripts/validate_project.js"></script>

</body>
</html>
